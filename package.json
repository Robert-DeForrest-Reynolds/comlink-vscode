{
  "name": "comlink",
  "publisher": "cavan",
  "displayName": "comlink",
  "description": "Debloat your code from comments with external comment linking",
  "version": "0.0.3",
  "repository": "https://github.com/Robert-DeForrest-Reynolds/comlink-vscode",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:comlink"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "comlink.init",
        "title": "Initialize comlink directory"
      },
      {
        "command": "comlink.del",
        "title": "Delete comlink comment on current line."
      }
    ]
  },
  "files": [
    "./comlink"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "copy:comlink": "node src/get_comlink.js",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
